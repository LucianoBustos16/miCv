---
import Sections from '../Sections.astro'

import { skills } from "@cv"
---
<Sections title="Skill">

    <ul>
        {
            skills.map(({name}) => (
                <li>
                    <span>{name}</span>
                </li>
            ))
        }
    </ul>
    
</Sections>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        border-radius: 60px;
        background: #eee;
        color: #000;
        font-size: .8rem;
        font-weight: 500;
        padding: .2rem .6rem;
    }
</style>